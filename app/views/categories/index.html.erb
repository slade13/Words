<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <% @categories.each_slice(3) do |categories| %>
    <div class="row" style="margin-bottom: 20px;">
        <% categories.each do |category| %>
          <a href="<%= category_path(category) %>">
            <div class="col-xs-12 col-sm-4">
              <div class="card">
                <div class="card-block">
                  <img src="<%= category.image %>" class="img-responsive" />
                  <h4 class="card-title"><%= category.name %></h4>
                  <p class="card-text"><%= category.description %></p>
                  <% link_to 'Show', category, class: 'btn btn-primary' %>
                  <% link_to 'Edit', edit_category_path(category), class: 'btn btn-warning' %>
                  <% link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                </div>
              </div>
            </div>
          </a>
        <% end %>
    </div>
  <% end %>
</div>
<br>

