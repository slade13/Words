<p id="notice"><%= notice %></p>

<% @packages.each do |package| %>
    <div class="row">
      <div class="card">
        <a href="<%= package_path(package) %>" style="text-decoration: none;">
          <div class="card-block">
            <div class="bs-callout bs-callout-info package">
              <h4>
                <%= package.name %>
                <span class="badge"><%= package.words.size() %></span>
              </h4>
              <p style="color: #337ab7;">
                <%= package.description %>
              </p>
            </div>
          </div>
        </a>
      </div>
    </div>
<% end %>

<br>

<%= link_to 'New Package', new_package_path %>
