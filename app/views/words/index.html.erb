<p id="notice"><%= notice %></p>

<h1>Listing Words</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>English name</th>
      <th>Polish name</th>
      <th>Package</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.english_name %></td>
        <td><%= word.polish_name %></td>
        <td><%= word.package.name %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

